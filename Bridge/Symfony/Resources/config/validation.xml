<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
        xmlns="http://symfony.com/schema/dic/constraint-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ekyna\Component\Resource\Model\AbstractTranslatable">
        <property name="translations">
            <constraint name="Valid"/>
        </property>
    </class>

    <class name="Ekyna\Component\Resource\Model\AbstractTranslation">
        <property name="locale">
            <constraint name="Locale"/>
        </property>
    </class>

    <class name="Ekyna\Component\Resource\Model\Anniversary">
        <property name="month">
            <constraint name="Range">
                <option name="min">1</option>
                <option name="max">12</option>
            </constraint>
        </property>
        <property name="day">
            <constraint name="Range">
                <option name="min">1</option>
                <option name="max">31</option>
            </constraint>
        </property>
        <constraint name="Ekyna\Component\Resource\Bridge\Symfony\Validator\Anniversary"/>
    </class>

</constraint-mapping>
